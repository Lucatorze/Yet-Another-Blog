{% extends 'BookingBundle::layout.html.twig' %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col">
            <p>{{ 'booking_list_name'|trans }} :</p>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Hotel</th>
                        <th>Room</th>
                        <th>Type</th>
                    </tr>
                </thead>
                <tbody>
                    {% for room in rooms %}
                    <tr>
                        <td>{{ room.hotel.name }}</td>
                        <td>{{ room.number }}</td>
                        <td>{{ room.roomType }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
