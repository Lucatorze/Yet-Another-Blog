<!DOCTYPE html>
<html lang="{{ 'short_name'|trans }}">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>Yet Another Blog</title>
        
        <!-- Favicon -->
        <link rel="shortcut icon" href="favicon.ico">
        
        <!-- Web Fonts -->
        <link rel='stylesheet' type='text/css' href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600&amp;subset=cyrillic,latin'>
        
        <!-- CSS Global Compulsory -->
        <link rel="stylesheet" href="{{ asset('bundles/blog/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/blog/css/style.css') }}">
        
        <!-- CSS Header and Footer -->
        <link rel="stylesheet" href="{{ asset('bundles/blog/css/header-default.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/blog/css/footer-v1.css') }}">
        
        <!-- CSS Implementing Plugins -->
        <link rel="stylesheet" href="{{ asset('bundles/blog/css/animate.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/blog/css/line-icons.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/blog/css/font-awesome.min.css') }}">
        
        <!-- CSS Page Style -->
        <link rel="stylesheet" href="{{ asset('bundles/blog/css/shortcode_timeline1.css') }}">
        
        <!-- CSS Theme -->
        <link rel="stylesheet" href="{{ asset('bundles/blog/css/default.css') }}" id="style_color">
        <link rel="stylesheet" href="{{ asset('bundles/blog/css/dark.css') }}">
        
        <!-- CSS Customization -->
        <link rel="stylesheet" href="{{ asset('bundles/blog/css/custom.css') }}">
    </head>
    
    <body>
        <div class="wrapper">
            <!--=== Header ===-->
            <div class="header">
                <div class="container">
                    <!-- Logo -->
                    <a class="logo" href="index.html">
                        <img src="{{ asset('bundles/blog/img/logo1-default.png') }}" alt="Logo">
                    </a>
                    <!-- End Logo -->
                    
                    <!-- Topbar -->
                    <div class="topbar">
                        <ul class="loginbar pull-right">
                            <li class="hoverSelector">
                                <i class="fa fa-globe"></i>
                                <a>Langue</a>
                                <ul class="languages hoverSelectorBlock">
                                    <li><a href="{{ path('fr') }}">Fran√ßais</a></li>
                                    <li><a href="{{ path('en') }}">Anglais</a></li>
                                </ul>
                            </li>
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <li class="topbar-devider"></li>
                                <li><a href="{{path('fos_user_profile_show')}}">{{app.user.username}}</a></li>
                                <li class="topbar-devider"></li>
                                <li><a href="{{path('fos_user_security_logout')}}">Se deconnecter</a></li>
                            {% else %}
                                <li class="topbar-devider"></li>
                                <li><a href="{{path('fos_user_security_login')}}">Login</a></li>
                                <li class="topbar-devider"></li>
                                <li><a href="{{path('fos_user_registration_register')}}">Register</a></li>
                            {% endif %}
                        </ul>
                    </div>
                    <!-- End Topbar -->
                    
                    <!-- Toggle get grouped for better mobile display -->
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="fa fa-bars"></span>
                    </button>
                    <!-- End Toggle -->
                </div><!--/end container-->
                
                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse mega-menu navbar-responsive-collapse">
                    <div class="container">
                        <ul class="nav navbar-nav">
                            <li class="dropdown">
                                <a href="{{path('home')}}">Home</a>
                            </li>
                            
                            <li class="dropdown">
                                <a href="{{path('categoryList')}}">Categorie</a>
                            </li>
                            
                            <li class="dropdown">
                                <a href="{{path('sonata_admin_redirect')}}">Administration</a>
                            </li>
                            
                            <li>
                                <i class="search fa fa-search search-btn"></i>
                                <div class="search-open">
                                    <div class="input-group animated fadeInDown">
                                        <input type="text" class="form-control" placeholder="Search">
                                        <span class="input-group-btn">
                                            <button class="btn-u" type="button">Go</button>
                                        </span>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!--=== End Header ===-->
            
            
        {% block content %}{% endblock %}
        
        <footer></footer>
    </div>
    
    <!-- JS Global Compulsory -->
    <script type="text/javascript" src="{{ asset('bundles/blog/js/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/blog/js/jquery-migrate.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/blog/js/bootstrap.min.js') }}"></script>
    <!-- JS Implementing Plugins -->
    <script type="text/javascript" src="{{ asset('bundles/blog/js/back-to-top.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/blog/js/smoothScroll.js') }}"></script>
    <!-- JS Customization -->
    <script type="text/javascript" src="{{ asset('bundles/blog/js/custom.js') }}"></script>
    <!-- JS Page Level -->
    <script type="text/javascript" src="{{ asset('bundles/blog/js/app.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/blog/js/style-switcher.js') }}"></script>
    <script type="text/javascript">
        jQuery(document).ready(function() {
            App.init();
            StyleSwitcher.initStyleSwitcher();
        });
    </script>
</body>
</html>
